<% include ../navbar/accountant %>

<br>
<div class="container">
  <div class="row">
    <div class="col s6" style="border: whitesmoke solid">
      <div class="row">
        <h6 style="text-align: center">Expenses</h6>
        <form class="col s12" action="/expensesAndBudget/expenses/create" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input value="<%= typeof expenses != 'undefined' ? expenses._id : '' %>" id="expenses_id"
                name="expenses_id" type="hidden" class="validate">
              <!-- <label for="expenses_type">ID</label> -->
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input value="<%= typeof expenses != 'undefined' ? expenses.expenses_type : '' %>" id="expenses_type"
                name="expenses_type" type="text" class="validate" required>
              <label for="expenses_type">Name</label>
            </div>

            <div class="input-field col s6">
              <input value="<%= typeof expenses != 'undefined' ? expenses.amount : '' %>" id="amount" name="amount"
                type="text" class="validate" required>
              <label for="amount">Amount</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <textarea id="datail" class="materialize-textarea" name="detail" required
                maxlength="300"><%= typeof expenses != 'undefined' ? expenses.detail : '' %></textarea>
              <label for="detail">Detail</label>
            </div>
          </div>

          <div class="row">
            <div class="col s6">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                <%= typeof expenses != 'undefined' ? 'Update' : 'Save' %>
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div><!-- col 1 end -->

    <!-- BUDGET START -->

    <div class="col s6" style="border: whitesmoke solid">
      <div class="row">
        <h6 style="text-align: center">Budget</h6>
        <form class="col s12" action="/expensesAndBudget/budget/create" method="POST">
          <div class="row">
            <div class="input-field col s12">
              <input id="budget_id" name="budget_id" type="hidden" class="validate">
              <!-- <label for="budget_id">ID</label> -->
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <select class="validate" name="category_name">
                <option disabled selected>Category</option>
                <% category.forEach((category) => {%>
                <option value="<%= category.category_name %>"><%= category.category_name %></option>
                <%})%>
              </select>
              <label>Select Category</label>
            </div>

            <div class="input-field col s6">
              <select class="validate" name="brand_name">
                <option disabled selected>Brand</option>
                <% brand.forEach((brand) => {%>
                <option value="<%= brand.brand_name %>"><%= brand.brand_name %></option>
                <%})%>
              </select>
              <label>Select Brand</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input id="other_budget" name="other_budget" type="text" class="validate">
              <label for="other_budget">Other Budget</label>
            </div>

            <div class="input-field col s6">
              <input id="budget_amount" name="budget_amount" type="text" class="validate" required>
              <label for="budget_amount">Amount</label>
            </div>
          </div>

          <div class="row">
            <div class="col s6 push-s9">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                <%= typeof budget != 'undefined' ? 'Update' : 'Save' %>
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div><!-- col 2 end -->
  </div><!-- main row 1 end -->
</div>

<script>
  // selection
  $(document).ready(function () {
    $('select').formSelect();
  });
</script>