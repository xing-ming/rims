<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <form action="/room/floor/create" method="post">
          <div class="row">
            <div class="input-field col s6">
              <input type="text" name="floor_name" id="floor_name" placeholder="Add Floor" class="validate" required>
              <label for="floor_name">Floor</label>
            </div>

            <div class="input-field col s6">
              <input type="text" name="floor_range" id="floor_range" placeholder="Add Floor Range" class="validate"
                required>
              <label for="floor_range">Floor Range</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <button class="btn waves-effect waves-light" type="submit" name="action">
                Save
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        </form>
      </div><!-- form row -->

      <div class="row">
        <table class="highlight centered responsive-table">
          <thead>
            <tr>
              <th>Floor</th>
              <th>Floor Range</th>
              <th></th>
            </tr>
          </thead>

          <tbody id="searchTable">
            <% floor.forEach((floor) => {%>
            <tr>
              <td><%= floor.floor_name %></td>
              <td><%= floor.floor_range %></td>
              <td>
                <a href="/room/floor/delete/<%= floor._id %>" class=" btn tooltipped" data-position="bottom"
                  data-tooltip="Delete">
                  <i class="material-icons">delete</i>
                </a>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div><!-- table row -->
    </div>
  </div>
</div>