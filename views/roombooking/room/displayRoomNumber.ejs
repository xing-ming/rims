<% include ../../navbar/frontDesk %>

<div class="container">
  <div class="row">
    <div class="col s8 push-s2">
      <div class="row">
        <h6>Mange Room Number</h6>
        <h6 class="green-text" style="text-align: center"><% include ../../messages/success%></h6>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="searchInput" type="text" placeholder="search vacant and occupied room">
          <label for="searchInput">Search</label>
        </div>
      </div>

      <div class="row">
        <table class="highlight centered responsive-table">
          <thead>
            <tr>
              <th>Number</th>
              <th>Room</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody id="searchTable">
            <% roomNumber.forEach((number) => {%>
            <tr>
              <td><%= number.room_number %></td>
              <td><%= number.result %></td>
              <td>
                <a href="/room/room-number/delete/<%= number._id %>" class=" btn tooltipped" data-position="bottom"
                  data-tooltip="Delete" onclick="return confirm('Do you want to delete ?')">
                  <i class="material-icons">delete</i>
                </a>
              </td>
              <td>
                <a href="/room/room-number/edit/<%= number._id %>" class=" btn tooltipped" data-position="bottom"
                  data-tooltip="Confirm">
                  <i class="material-icons">check</i>
                </a>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div><!-- table row -->
    </div>
  </div>
</div>