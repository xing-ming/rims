<% include ../navbar/casher %>

<br>
<div class="container">
  <div class="row">
    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Item</span>
          <p>Show all items by it category and brand</p>
        </div>
        <div class="card-action">
          <a href="/casher/item/display">Display items</a>
          <a href="/casher/item/order-display">Display order</a>
        </div>
      </div>
    </div><!-- col 1 -->

    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <ul class="collection with-header">
          <li class="collection-header blue-grey">
            <h4>Category of items</h4>
          </li>
          <% category.forEach((category) => {%>
          <li class="collection-item">
            <a href="/casher/item/display/category/<%= category.category_name %>"><%= category.category_name %></a>
          </li>
          <%})%>
        </ul>
      </div>
    </div><!-- col 2 -->

    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <ul class="collection with-header">
          <li class="collection-header blue-grey">
            <h4>Brand of items</h4>
          </li>
          <% brand.forEach((brand) => {%>
          <li class="collection-item">
            <a href="/casher/item/display/brand/<%= brand.brand_name %>"><%= brand.brand_name %></a>
          </li>
          <%})%>
        </ul>
      </div>
    </div><!-- col 3 -->
  </div>