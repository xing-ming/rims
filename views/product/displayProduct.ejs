<% include ../navbar/accountant %>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <h6>Manage Store Products</h6>
        <h6 class="green-text" style="text-align: center"><% include ../messages/success%></h6>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="searchInput" type="text" placeholder="search only old product please">
          <label for="searchInput">Search</label>
        </div>
      </div>
    </div>

    <div class="col s6">
      <div class="row">
        <h6>New Product</h6>
      </div>

      <div class="row">
        <table class="highlight centered responsive-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Qty</th>
              <th>Unit</th>
              <th>Total</th>
              <th>Price</th>
              <th>Amount</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% product.forEach((product) => {%>
            <tr>
              <td><%= product.product_name %></td>
              <td><%= product.new_carton_quantity %></td>
              <td><%= product.new_carton_qty_unit %></td>
              <td><%= product.new_carton_total_qty %></td>
              <td><%= product.new_carton_price_unit %></td>
              <td><%= product.new_product_total_amount %></td>
              <td></td>
              <td></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col s6">
      <div class="row">
        <h6>Old Product</h6>
      </div>

      <div class="row">
        <table class="highlight centered responsive-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Qty</th>
              <th>SQty</th>
              <th>QUnit</th>
              <th>TotalQ</th>
              <th>QRem</th>
              <th>Price</th>
              <th>Amount</th>
            </tr>
          </thead>

          <tbody id="searchTable">
            <% product.forEach((product) => {%>
            <tr>
              <td><%= product.product_name %></td>
              <td><%= product.old_carton_quantity %></td>
              <td><%= product.sale_qty %></td>
              <td><%= product.old_carton_qty_unit %></td>
              <td><%= product.old_carton_total_qty %></td>
              <td><%= product.qty_remainder %></td>
              <td><%= product.old_carton_price_unit %></td>
              <td><%= product.old_product_total_amount %></td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div><!-- container -->