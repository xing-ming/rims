<% include ../navbar/ict %>

<br>
<div class="container">
  <div class="row">
    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Item</span>
          <p>Create item, view items and <br> create payment method and display</p>
        </div>
        <div class="card-action">
          <a href="/ict/item/create">Add</a>
          <a href="/ict/item/display">View</a>
          <a href="/ict/paymentMethod/getPaymentMethod">Payment-method</a>
        </div>
      </div>
    </div><!-- col 1 -->

    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <ul class="collection with-header">
          <li class="collection-header blue-grey">
            <a href="/ict/catalog/category/brand/create" class="black-text">Catalog</a>
          </li>
          <% category.forEach((category) => {%>
          <li class="collection-item">
            <a href="/ict/item/display/category/<%= category.category_name %>"><%= category.category_name %></a>
          </li>
          <%})%>
        </ul>
      </div>
    </div><!-- col 2 -->

    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <ul class="collection with-header">
          <li class="collection-header blue-grey">
            <h4>Brand of items</h4>
          </li>
          <% brand.forEach((brand) => {%>
          <li class="collection-item">
            <a href="/ict/item/display/brand/<%= brand.brand_name %>"><%= brand.brand_name %></a>
          </li>
          <%})%>
        </ul>
      </div>
    </div><!-- col 3 -->
  </div> <!-- row 1 -->
  <div class="row">
    <div class="col s4 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Employee</span>
          <p>Create employee, department <br> display employee and department</p>
        </div>
        <div class="card-action">
          <a href="/employee/department/create">Dep</a>
          <a href="/employee/department/displayDepartment">View</a>
          <a href="">Emp</a>
          <a href="">view</a>
        </div>
      </div>
    </div><!-- col 1 -->

  
  </div>
</div>