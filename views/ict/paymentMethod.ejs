<% include ../navbar/ict %>

<br style="line-height: 120px">
<div class="container">
  <div class="row">
    <div class="col s8 push-s2">
      <div class="row">
        <h6 class="green-text"><% include ../messages/success%></h6>
        <h6 class="red-text"><% include ../messages/danger%></h6>
        <form action="/ict/paymentMethod/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="payment_method" type="text" name="payment_method" class="validate" required autofocus>
              <label for="payment_method">Payment Method</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>

        <div class="row">
          <ul class="collection with-header">
            <li class="collection-header">
              <h5>Payment Method</h5>
            </li>
            <% payment_method.forEach((payment) => {%>
            <li class="collection-item">
              <div>
                <%= payment.payment_method %>
                <a href="/ict/paymentMethod/delete/<%= payment._id %>" class="secondary-content black-text">
                  <i class="material-icons">delete</i>
                </a>
              </div>
            </li>
            <%})%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>