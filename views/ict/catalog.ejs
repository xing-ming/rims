<% include ../navbar/ict %>

<br style="line-height: 120px">
<div class="container">
  <div class="row">
    <div class="col s4 pull-s2">
      <div class="row">
        <form action="/ict/catalog/category/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="category_name" type="text" name="category_name" class="validate" required autofocus>
              <label for="category_name">Category Name</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>

        <div class="row">
          <ul class="collection with-header">
            <li class="collection-header">
              <h5>Categories</h5>
            </li>
            <% category.forEach((category) => {%>
            <li class="collection-item">
              <div>
                <%= category.category_name %>
                <a href="/ict/catalog/category/delete/<%= category._id %>" class="secondary-content red-text">
                  <i class="material-icons">delete</i>
                </a>
              </div>
            </li>
            <%})%>
          </ul>
        </div>
      </div>
    </div><!-- main col -->

    <!-- messages -->
    <div class="col s4">
      <h6 class="green-text" style="text-align: center"><% include ../messages/success%></h6>
      <h6 class="red-text" style="text-align: center"><% include ../messages/danger%></h6>
    </div>

    <!-- brand actions -->
    <div class="col s4 push-s2">
      <div class="row">
        <form action="/ict/catalog/brand/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="brand_name" type="text" name="brand_name" class="validate" required autofocus>
              <label for="brand_name">Brand Name</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>

        <div class="row">
          <ul class="collection with-header">
            <li class="collection-header">
              <h5>Brands</h5>
            </li>
            <% brand.forEach((brand) => {%>
            <li class="collection-item">
              <div>
                <%= brand.brand_name %>
                <a href="/ict/catalog/brand/delete/<%= brand._id %>" class="secondary-content red-text">
                  <i class="material-icons">delete</i>
                </a>
              </div>
            </li>
            <%})%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>