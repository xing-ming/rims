<% include ../navbar/accountant %>

<div class="container">
  <div class="row">
    <div class="col s8 push-s2">
      <div class="row">
        <form action="/accountant/weeklyAccount/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="weeklyAccount_id" type="hidden" name="weeklyAccount_id" class="validate"
                value="<%= typeof weeklyAccount != 'undefined' ? weeklyAccount._id : '' %>">
              <!-- <label for="weeklyAccount_id">Id</label> -->
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="username" type="text" name="username" class="validate" required
                value="<%= typeof weeklyAccount != 'undefined' ? weeklyAccount.username : '' %>" placeholder="Pinyin">
              <label for="username">Username</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="amount" type="text" name="amount" class="validate" required
                value="<%= typeof weeklyAccount != 'undefined' ? weeklyAccount.amount : '' %>" autofocus>
              <label for="amount">Amount</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <select class="validate" name="week_name" required>
                <option disabled selected
                  value="<%= typeof weeklyAccount != 'undefined' ? weeklyAccount.week_name : '' %>">Weeks
                </option>
                <% weeks.forEach((week) => {%>
                <option value="<%= week.week_name %>"><%= week.week_name %></option>
                <%})%>
              </select>
              <label>Select Week</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // selection
  $(document).ready(function () {
    $('select').formSelect();
  });
</script>