<% include ../navbar/accountant %>

<div class="container">
  <div class="row">
    <div class="col s8 push-s2">
      <div class="row">
        <form action="/accountant/dayAccount/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="dayAccount_id" type="hidden" name="dayAccount_id" class="validate"
                value="<%= typeof dayAccount != 'undefined' ? dayAccount._id : '' %>">
              <!-- <label for="dayAccount_id">Id</label> -->
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="username" type="text" name="username" class="validate" required
                value="<%= typeof dayAccount != 'undefined' ? dayAccount.username : '' %>" placeholder="Pinyin">
              <label for="username">Username</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="amount" type="text" name="amount" class="validate" required
                value="<%= typeof dayAccount != 'undefined' ? dayAccount.amount : '' %>" autofocus>
              <label for="amount">Amount</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <select class="validate" name="day_name" required>
                <option disabled selected value="<%= typeof dayAccount != 'undefined' ? dayAccount.day_name : '' %>">
                  Days
                </option>
                <% days.forEach((day) => {%>
                <option value="<%= day.day_name %>"><%= day.day_name %></option>
                <%})%>
              </select>
              <label>Select Day</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // selection
  $(document).ready(function () {
    $('select').formSelect();
  });
</script>