<% include ../../navbar/accountant %>

<br>
<div class="container">
  <div class="row">
    <div class="col s8 push-s2">
      <div class="row">
        <h6 class="green-text"><% include ../../messages/success%></h6>
        <h6 class="red-text"><% include ../../messages/danger%></h6>

        <form action="/accountant/day/create" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input id="day_name" type="text" name="day_name" class="validate" autofocus required>
              <label for="day_name">Day Name</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Save
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>

        <div class="row">
          <ul class="collection with-header">
            <li class="collection-header">
              <h6>Days</h6>
            </li>
            <% days.forEach((day) => {%>
            <li class="collection-item">
              <div>
                <%= day.day_name %>
                <a href="/accountant/day/delete/<%= day._id %>" class="secondary-content red-text">
                  <i class="material-icons">delete</i>
                </a>
              </div>
            </li>
            <%})%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>