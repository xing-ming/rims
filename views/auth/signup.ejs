<% include ../navbar/admin %>

<br>
<div class="container">
  <div class="row">
    <div class="col s10 push-s4">
      <div class="row">
        <br>
        <h6>Register User</h6>
        <h6 style="text-align: center"><% include ../messages/messages %></h6>

        <form class="col s12" action="/auth/users/signup" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="First name and Last Name" id="name" type="text" name="name" class="validate"
                value="<%= typeof name != 'undefined' ? name : '' %>">
              <label for="name">Name</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Enter E-mail" id="email" type="email" name="email" class="validate"
                value="<%= typeof email != 'undefined' ? email : '' %>">
              <label for="last_name">E-Mail</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Enter Password" id="password" type="password" class="validate" name="password"
                value="<%= typeof email != 'undefined' ? password : '' %>">
              <label for="password">Password</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Confirm Password" id="password2" type="password" class="validate" name="password2"
                value="<%= typeof email != 'undefined' ? password2 : '' %>">
              <label for="password2">Confirm Password</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <select name="administrator" required>
                <option value="" disabled selected></option>
                <option value="Manager">Manager</option>
                <option value="ICT">ICT</option>
                <option value="Cashier">Cashier</option>
                <option value="Accountant">Accountant</option>
                <option value="Developer">The Strawberrybridge</option>
              </select>
              <label>Select Administrator</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('select').formSelect();
  });
</script>
