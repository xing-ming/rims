<% include ../navbar/homeNavbar %>

<br>
<div class="container">
  <div class="row">
    <div class="col s12 push-s3">
      <div class="row">
        <br>
        <h6 style="line-height: 200px">Sign in</h6>
        <h6 style="text-align: center"><% include ../messages/messages %></h6>
        <h6 style="text-align: center" class="red-text"><% include ../messages/auth_danger %></h6>

        <form class="col s12" action="/auth/users/signin" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Enter Email" id="email" type="email" class="validate" name="email" autofocus>
              <label for="email">E-Mail</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Enter Password" id="password" type="password" class="validate" name="password">
              <label for="password">Password</label>
            </div>
          </div>

          <div class="row">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>