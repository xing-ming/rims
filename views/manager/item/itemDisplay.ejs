<% include ../../navbar/admin %>

<br>
<div class="container">
  <div class="row">
    <div class="col s12 pull-s0">
      <div class="row">
        <div class="row">
          <div class="input-field col s12">
            <input id="searchInput" type="text" placeholder="search name qty price category brand">
            <label for="searchInput">Search</label>
          </div>
        </div>
        <table class="highlight centered responsive-table">
          <thead>
            <tr>
              <th>Item Name</th>
              <th>Item Quantity</th>
              <th>Item Price</th>
              <th>Item Category</th>
              <th>Item Brand</th>
              <th></th>
            </tr>
          </thead>

          <tbody id="searchTable">
            <% items.forEach((item) => {%>
            <tr>
              <td><%= item.item_name %></td>
              <td><%= item.item_quantity %></td>
              <td><%= item.item_price %></td>
              <td><%= item.category_name %></td>
              <td><%= item.brand_name %></td>
              <td>
                <a href="/manager/item/delete/<%= item._id %>" class="black-text">
                  <i class="material-icons">delete</i>
                </a>
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div><!-- container -->