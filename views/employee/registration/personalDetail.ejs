<% include ../../navbar/ict %>

<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row">
        <% include ../../navbar/employeeNavbar %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s3">
      <div class="card small">
        <img src="/img/girl.jpeg" alt="passport image" width="255" height="300">
      </div>
    </div>
    <div class="col s12">
      <div class="row">
        <table class="highlight centered responsive-table">
          <thead>
            <tr></tr>
          </thead>

          <tbody>
            <tr>
              <th>Name</th>
              <td><%= employee.employee_name %></td>
            </tr>
            <tr>
              <th>Email</th>
              <td><%= employee.email %></td>
            </tr>
            <tr>
              <th>Date Of Birth</th>
              <td><%= employee.date_of_birth %></td>
            </tr>
            <tr>
              <th>Gender</th>
              <td><%= employee.gender %></td>
            </tr>
            <tr>
              <th>Phone_1</th>
              <td><%= employee.phone_1 %></td>
            </tr>
            <tr>
              <th>Phone_2</th>
              <td><%= employee.phone_2 %></td>
            </tr>
            <tr>
              <th>Street</th>
              <td><%= employee.street %></td>
            </tr>
            <tr>
              <th>City</th>
              <td><%= employee.city %></td>
            </tr>
            <tr>
              <th>State</th>
              <td><%= employee.state %></td>
            </tr>
            <tr>
              <th>Country</th>
              <td><%= employee.country %></td>
            </tr>
            <tr>
              <th>Marital Status</th>
              <td><%= employee.marital_status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div><!-- container -->